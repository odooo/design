
{% extends ":default:index.html.twig" %}
{% block stylesheets %}
    <style type="text/css">
        .dashboard {
            margin: 10px;
        }

        .dashboard:after {
            display: table;
            content: "";
            clear: both;
        }

        .dashboard .small-box {
            position: relative;
            float: left;
            margin: 10px;
            width: 180px;
            height: 120px;
        }

        .dashboard .small-box .count {
            position: absolute;
            top: 10px;
            left: 10px;
            font-size: 1.3em;
        }

        .dashboard .small-box .title {
            position: relative;
            display: inline-block;
            width: 100%;
            line-height: 1.5;
            vertical-align: middle;
            text-align: center;
            font-weight: 400;
            font-size: 1.2em;
        }

        .dashboard .small-box a {
            position: absolute;
            left: 0;
            right: 0;
            bottom: 0;
        }
    </style>
{% endblock %}

{% block content %}
    Hello World!
{% endblock %}


