{% form_theme form 'bootstrap_3_layout.html.twig' %}

<div class="container-fluid container-small">
    <div class='row'>
        <div class="col-sm-offset-3 col-sm-6">
            {{ form_start(form, { 'method': 'POST', 'action': action }) }}
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Pagne : </h3>
                    <div class="row">
                        <div class="col-sm-offset-6 col-sm-6 text-center">
                            {% if pagne is defined %}
                                {% if pagne.photo is not null %}
                                    <img  src="{{asset('uploads/pieces/')}}{{pagne.photo}}" id="profile-img-tag" class="btn img-circle img-responsive" />
                                {% else %}
                                    <img  src="{{asset('bundles/images/profil.png')}}" id="profile-img-tag" class="btn img-circle img-responsive" />
                                {% endif %}
                            {% else %}
                                <img  src="{{asset('bundles/images/profil.png')}}" id="profile-img-tag" class="btn img-circle img-responsive" />
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="box-body">            
                    {{ form_rest(form) }}
                </div>
                <div class="box-footer">        
                    <button type="submit" class="btn btn-success pull-right">{{ submit }}</button>
                    <a href="{{path('tontine_pagne')}}" type="button" class="btn btn-primary">Annuler</a>
                </div>
            </div>            
            {{ form_end(form) }}
        </div>
    </div>
</div>