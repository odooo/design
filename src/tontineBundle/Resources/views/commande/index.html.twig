{% extends "default/index.html.twig" %}

{% block title %}Liste des commandes de Global Design{% endblock %}

{% block content_header %}
    <h3>Liste des commandes de Global Design</h3>
{% endblock %}

{% block content %}
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Liste des commandes de Global Design</h3>
        </div>
        <div class="box-body">
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Reference</th>
                        <th>Designation</th>
                        {#<th>Mesure</th>#}
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for commande in commandes %}
                        <tr>
                            <td><a href="{{ path('shop_command_show', { 'id': commande.id }) }}">{{ loop.index }}</a></td>
                            <td>{{ commande.reference }}</td>
                            <td>{{ commande.designation }}</td>
                            {#<td>{{ commande.mesure }}</td>#}
                            <td>
                                <div class="btn-group pull-right">
                                    <button type="button" class="btn btn-primary btn-xs dropdown-toggle" data-toggle="dropdown">
                                        Actions
                                        <span class="fa fa-caret-down"></span>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-right">

                                        {% if  is_granted('ROLE_COMMANDE_SHOW') %}
                                            <li>
                                                <a href="{{ path('shop_command_show', { 'id': commande.id }) }}">Afficher</a>
                                            </li>
                                        {% endif  %}

                                        {#{% if  is_granted('ROLE_COMMANDE_EDIT') %}#}
                                            {#<li>#}
                                                {#<a href="{{ path('shop_command_edit', { 'id': commande.id }) }}">Modifier</a>#}
                                            {#</li>#}
                                        {#{% endif  %}#}

                                        {% if  is_granted('ROLE_FICHE_EDIT') %}
                                            <li>
                                                <a href="{{ path('shop_command_show', { 'id': commande.id }) }}">Editer la fiche de travail</a>
                                            </li>
                                        {% endif  %}

                                        <li>
                                            <a href="{{ path('shop_command_facture_edit', { 'id': commande.id }) }}">Editer la facture</a>
                                        </li>

                                    </ul>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="box-footer">
            <a href="{{ path('shop_command_new') }}" class="btn btn-primary">
                <i class="fa fa-plus"></i>
                Ajouter une nouvelle commande
            </a>
        </div>
    </div>
{% endblock %}

