{% form_theme form 'bootstrap_3_layout.html.twig' %}
<link rel="stylesheet"
              href="{{ asset('bundles/plugins/bower_components/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css') }}"/>
<link rel="stylesheet" href="{{ asset('bundles/plugins/select2/select2.min.css') }}"/>
<div class="container-fluid container-small">
    <div class='row'>
        <div class="col-sm-12">
            {{ form_start(form) }}
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Commande: </h3>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-sm-6">
                            {{ form_errors(form.designation) }}
                            <div class="form-group">
                                {{ form_label(form.designation, 'Désignation'|trans) }}
                                <div class="form-group">
                                    {{ form_widget(form.designation) }}
                                </div>

                            </div>
                            <span>&nbsp;&nbsp;&nbsp;</span>
                            {{ form_errors(form.reference) }}
                            <div class="form-group">
                                {{ form_label(form.reference, 'Référence'|trans) }}
                                <div class="form-group">
                                    {{ form_widget(form.reference) }}
                                </div>

                            </div>
                            <span>&nbsp;&nbsp;&nbsp;</span>
                            {{ form_errors(form.client) }}
                            <div class="form-group">
                                {{ form_label(form.client, 'Client'|trans) }}
                                <div class="form-group">
                                    {{ form_widget(form.client) }}
                                </div>

                            </div>
                        </div>

                        <div class="col-sm-6">
                            {{ form_errors(form.typeCommande) }}
                            <div class="form-group">
                                {{ form_label(form.typeCommande, 'Type de commande'|trans) }}
                                <div class="form-group">
                                    {{ form_widget(form.typeCommande) }}
                                </div>
                            </div>

                            <span>&nbsp;&nbsp;&nbsp;</span>
                            <div id="pagne">
                                {{ form_errors(form.pagne) }}
                                <div class="form-group">
                                    {{ form_label(form.pagne, 'Pagnes'|trans ) }}
                                    <div class="form-group">
                                        {{ form_widget(form.pagne ) }}
                                    </div>
                                </div>
                            </div>

                            <span>&nbsp;&nbsp;&nbsp;</span>
                            <div id="modele">
                                {{ form_errors(form.modele) }}
                                <div class="form-group">
                                    {{ form_label(form.modele, 'Modèles boutique'|trans) }}
                                    <div class="form-group">
                                        {{ form_widget(form.modele) }}
                                    </div>
                                </div>
                            </div>

                            <span>&nbsp;&nbsp;&nbsp;</span>
                            <div id="nomodele">
                                {{ form_errors(form.nomodele) }}
                                <div class="form-group">
                                    {{ form_label(form.nomodele, 'Modèles non boutique'|trans) }}
                                    <div class="form-group">
                                        {{ form_widget(form.nomodele) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    {{ form_rest(form) }}
                </div>
                <div class="box-footer">
                    {% if isModal is not defined %}
                        {% block form_actions %}
                            <div class="record-actions pull-left">
                                <a href="{{ path('shop_command_index') }}" class="btn btn-default" style="margin: 5px;">Retour</a>
                            </div>
                            <div class="record-actions pull-right">
                                <input type="submit" class="btn btn-primary" value="{% if submit is defined %}{{ submit }}{% else %}Valider{% endif %}" />
                            </div>
                        {% endblock %}
                    {% endif %}
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>

<script src="{{ asset('bundles/plugins/select2/select2.full.min.js') }}"></script>

<script type="text/javascript">
    $(function(){
        $(".select2").select2();
        
    });
</script>