<div class="container-fluid container-small">
    <div class='row'>
        <div class="col-sm-offset-3 col-sm-6">
{{ form_start(form) }}
    {{ form_widget(form) }}
    {% if isModal is not defined %}
        {% block form_actions %}
            <div class="record-actions pull-right">
                <a href="{{ path('tontine_resiliationcontrat_index') }}" class="btn btn-default" style="margin: 5px;">Retour</a>
