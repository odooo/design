<table class="table table-striped table-bordered">
    <tbody>
        
        <tr>
            <th>Date d'enrégistrement</th>    
            <td>{% if visite.createdAt %}{{ visite.createdAt|date('Y-m-d H:i:s') }} par: 
                {{visite.createdBy.prenom}} {{visite.createdBy.nom | upper}}{% endif %}</td>            
        </tr> 
                                                
        <tr>
            <th>Client</th>
            <td>{{ visite.nomClient() }}</td>            
        </tr>    
                                                
        <tr>
            <th>Date de disponibilité</th>    
            <td>
                {% if visite.choixDate == 4 %}
                    <span class="label label-danger">Date personnelle</span>
                    <p class="yop-blink"><code>Les frais de visite sont à la charge du client</code></p>
                    {% if visite.dateDisponibilite %}
                        {{ visite.dateDisponibilite|date('d-m-Y H:i:s') }}
                    {% endif %}
                {% else %}
                    <span class="label label-success">Date prédéfinie</span>
                    {% if visite.choixDate == 1 %}
                        {{ visite.bien.dateVisite1|date('d-m-Y H:i:s') }}
                    {% elseif visite.choixDate == 2 %}
                        {{ visite.bien.dateVisite2|date('d-m-Y H:i:s') }}
                    {% elseif visite.choixDate == 3 %}
                        {{ visite.bien.dateVisite3|date('d-m-Y H:i:s') }}
                    {% endif %}                 
                {% endif %}
            </td>            
        </tr>    
                                                
        <tr>
            <th>Moyen de déplacement</th>
            <td>{{ visite.moyenDeplacement }}</td>            
        </tr>
        <tr>
            <td>Etat</td>
            <td>
                {% if visite.etat == 0 %}
                    <p class="label label-primary">Nouvelle</p>
                {% elseif visite.etat == 1 %}
                     <p class="label label-warning">Validée</p>
                {% elseif visite.etat == 2 %}
                     <p class="label label-success">Clôturée</p>
                {% elseif visite.etat == 3 %}
                     <p class="label label-danger">Abandonnée</p>
                {% endif%}
            </td>
        </tr>
        
        <tr>
            <th>Bien</th>    
            <td>
                {% if visite.bien %}
                    <p>Code: {{visite.bien.code}}</p>
                    <p>Quartier: {{visite.bien.quartier}}</p>
                    <p>Zone: {{visite.bien.zone}}</p>
                    <p>Description: {{visite.bien.description}}</p>
                {% endif %}
            </td>            
        </tr> 
                                                
        <tr>
            <th>Date de validation</th>    
            <td>{% if visite.dateValidation %}{{ visite.dateValidation|date('Y-m-d H:i:s') }} par: {{visite.responsable.prenom}} {{visite.responsable.nom | upper}}{% endif %}</td>            
        </tr>    
                                                
        <tr>
            <th>Date effective</th>    
            <td>{% if visite.dateEffective %}{{ visite.dateEffective|date('Y-m-d H:i:s') }} par: {{visite.closeBy.prenom}} {{visite.closeBy.nom | upper}}{% endif %}</td>            
        </tr>
        
        <tr>
            <th>Date de modification</th>    
            <td>{% if visite.updatedAt %}{{ visite.dateEffective|date('Y-m-d H:i:s') }} par: {{visite.updatedBy.prenom}} {{visite.updatedBy.nom | upper}}{% endif %}</td>            
        </tr>
        
        <tr>
            <th>Date d'abandon</th>    
            <td>{% if visite.dateAbandon %}{{ visite.dateAbandon|date('Y-m-d H:i:s') }} par: {{visite.abandonnant.prenom}} {{visite.abandonnant.nom | upper}}{% endif %}</td>            
        </tr>
   
    </tbody>
</table>