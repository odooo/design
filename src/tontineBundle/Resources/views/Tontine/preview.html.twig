<div style="padding: 10px">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Informations de la tontine</h3>
            <div class="btn-group pull-right">
                <button type="button" class="btn btn-primary btn-xs dropdown-toggle" data-toggle="dropdown">
                    Actions
                    <span class="fa fa-caret-down"></span>
                </button>
                    <ul class="dropdown-menu dropdown-menu-right">
                        {% if is_granted('ROLE_TONTINE_CONTRAT') %}
                            <li>
                                <a yop-popin="{{ path('tontine_contrat_popup') }}" onclick="recupertontineId( {{tontine.id}} )" yop-js="initContratForm" title="Ajouter Contrat">Ajout Contrat</a>
                            </li>
                        {% endif %}
                         {% if is_granted(' ROLE_TONTINE_FINALIZE') %}
                                
                                <li>
                                    <a  yop-popin="{{ path('tontine_fincontrat_popup')}}"  onclick="recupertontineId({{tontine.id}})" title="Cloturer le contrat">clôturer le contrat</a>
                                </li>   
                               
                        {% endif %}
                        
                       {% if is_granted('ROLE_TONTINE_CANCEL') %}
                        <li>
                            <a  yop-popin="{{ path('tontine_resiliationcontrat_popup') }}"  onclick="recupertontineId( {{tontine.id}})" title="Resilier le Contrat">Resiliation du Contrat</a>
                        </li> 
                        {% endif %}
                    </ul>
            </div>
        </div>
        <div class="box-body">
            <div><strong>Mode: </strong>{{ tontine.mode.libelle }}</div>
            <div><strong>Crée le : </strong>{{ tontine.createdAt | date('d/m/Y') }}</div>
        </div>
    </div>

    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Liste des mises</h3>
            {% if is_granted('ROLE_TONTINE_ADD_MISE') %}
                <button 
                    class="btn btn-primary btn-xs pull-right"
                    title="Déposer une mise"
                    yop-popin="{{ path('tontine_depotmise_new_form', {tontine: tontine.id}) }}" 
                    yop-popin-size="medium"
                    yop-popin-positive="addTontineMise"
                    yop-js="initTontineMiseForm">
                    Déposer une mise
                </button>
            {% endif %}
        </div>
        <div class="box-body no-padding">
            <table class="table table-striped table-bordered" id="table-list-mise">
            {% for mise in tontine.mises %}
                {% include 'tontineBundle:DepotMise:partials/item.html.twig' with {depotMise: mise, index: loop.index} %}
            {% endfor %}
            </table>
        </div>
    </div>
</div>