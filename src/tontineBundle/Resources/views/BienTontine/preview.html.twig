{% if bien.prix_vente %} 
    {% set prix_vente=bien.prix_vente %}
{% else %}
    {% set prix_vente=0 %}
{% endif %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

<div style="padding: 10px;">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Informations sur le bien</h3>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-sm-4">
                    <a href="#" class="thumbnail"> 
                      <img alt="Photo" class="img-thumbnail" src="{% if false %}{{api_server_name~'/'~bien.photos[0]}}{% else %}{{ asset('bundles/globalsevice.png') }}{% endif %}"  style="width:500px; height:300px;">
                    </a>
                </div>
                <div class="col-sm-8">                   
                     <div class="panel panel-info">
                        <div class="panel-body  table-responsive">
                            <table style=" text-align:left" class="table table-hover table-bordered">
                                    <tr>
                                        <th>Code</th>
                                        <td style=" text-align:left">{{ bien.code }}</td>
                                    </tr>

                                    <tr>
                                        <th>Description</th>
                                        <td style=" text-align:left">{{ bien.description }}</td>
                                    </tr>
                                    <tr>
                                        <th>Type</th>
                                        <td style=" text-align:left" >{{ bien.type_bien }}</td>
                                    </tr>
                                    <tr>
                                        <th>Zone</th>
                                        <td style=" text-align:left" >{{ bien.zone}}</td>
                                    </tr>
                                    <tr>
                                        <th>Quartier</th>
                                        <td style=" text-align:left" >{{ bien.quartier }}</td>
                                    </tr>
                                    <tr>
                                        <th>Prix</th>
                                        <td style=" text-align:left;color: #C82829;font-size: 120%" >{{ prix_vente | number_format(0, ',', '.') }}</td>
                                    </tr>
                            </table>
                        </div>

                    </div>
                </div>        
            </div>
        </div>
    </div>            
    <div class="box box-primary" style="margin-top: 20px">
        <div class="box-header with-border">
            <h3 class="box-title">Feuille de Choix</h3>
        </div>
        <div class="box-body no-padding">
            <div class="box-header">
               {{ form_start(form) }}
                    <div class="panel panel-info">
                        <div class="panel-body ">
                            
                            <div class="row">
                                <div class="col-md-3">
                                {{ form_errors( form.DateVisite1) }}
                                {{ form_label(form.DateVisite1) }}
                                {{ form_widget(form.DateVisite1) }}
                                </div>
                                <div class="col-md-3">
                                {{ form_errors( form.DateVisite2) }}
                                {{ form_label(form.DateVisite2) }}
                                {{ form_widget(form.DateVisite2) }}
                                </div>
                                <div class="col-md-3">
                                {{ form_errors( form.DateVisite3) }}
                                {{ form_label(form.DateVisite3) }}
                                {{ form_widget(form.DateVisite3) }}
                                </div>
                            </div>
                            <p></p>
                            <div class="row">
                                
                                <div class="col-md-3">
                                {% if form.zone is defined %}
                                {{ form_errors( form.zone) }}
                                {{ form_label(form.zone) }}
                                {{ form_widget(form.zone) }}
                                {% endif %} 
                                </div>

                                <div class="col-md-3">
                                {% if form.quartier is defined %}
                                {{ form_errors( form.quartier) }}
                                {{ form_label(form.quartier) }}
                                {{ form_widget(form.quartier) }} 
                                {% endif %} 
                                </div>

                                <div class="col-md-3"><br>
                                 <button type="submit" class="btn btn-primary">Valider</button>
                                </div>

                            </div>

                            
                        </div>
                    </div>
                {{ form_end( form) }}
            </div>

            <div class="box-body">
                <div class="table-responsive mailbox-messages"> 
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr style='color: #C82829;'>
                                <th colspan="3"><center>DUREE 1 AN </center></th>
                                <th colspan="3"><center>DUREE 2 ANS</center> </th>
                                <th colspan="3"><center>DUREE 3 ANS</center></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><b>PAR JOUR</b></td>
                                <td><b>PAR SEMAINE</b></td>
                                <td><b>PAR MOIS</b></td>
                                <td><b>PAR JOUR</b></td>
                                <td><b>PAR SEMAINE</b></td>
                                <td><b>PAR MOIS</b></td>
                                <td><b>PAR JOUR</b></td>
                                <td><b>PAR SEMAINE</b></td>
                                <td><b>PAR MOIS</b></td>
                            </tr>
                            <tr>
                                <td>{{options[1]['Journalier']}}</td>
                                <td>{{options[1]['Hebdomadaire']}}</td>
                                <td>{{options[1]['Mensuel']}}</td>
                                <td>{{options[2]['Journalier']}}</td>
                                <td>{{options[2]['Hebdomadaire']}}</td>
                                <td>{{options[2]['Mensuel']}}</td>
                                <td>{{options[3]['Journalier']}}</td>
                                <td>{{options[3]['Hebdomadaire']}}</td>
                                <td>{{options[3]['Mensuel']}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>               
        </div>
    </div>
</div>    
