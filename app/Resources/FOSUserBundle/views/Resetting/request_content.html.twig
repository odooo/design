{% trans_default_domain 'FOSUserBundle' %}

<div class="row-fluid">
    <div class=" col-sm-offset-4 col-sm-4" style="margin-top: 15%">
        <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
            <div class="form-login">
                <h4>Demande de rappel de mot de passe</h4>
                
                <div class="form-group text-center">
                    <label for="username">Entrez votre nom d'utilisateur / Adresse e-mail</label>
                    <input type="text" 
                        id="username" 
                        name="username" 
                        placeholder="Identifiant ou adresse e-mail"
                        required="required" 
                        class="form-control" />
                </div>
                <div class="text-center">
                    <input type="submit" class="btn btn-primary" value="Envoyer" />
                </div>
            </div>
        </form>
    </div>
</div>        
